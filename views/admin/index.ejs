<div class="container">

	<div class="row metro">
		<div class="col-sm-12">
			<h2>
				<a href="javascript:;"><%= __('Admin') %></a>
			</h2>
		</div>
	</div>

	<div class="row metro">
		<div class="col-sm-12">
			<a href="/admin/settings">
				<div class="tile bg-green">
				  <div class="tile-content icon">
				  	<i class="icon-cog"></i>
				  </div>
				  <div class="tile-status">
				    <span class="name"><%= __('Settings') %></span>
				  </div>
				</div>
			</a>	  
	  
	    
			<a href="/admin/users">
				<div class="tile double bg-cyan">
				  <div class="tile-content icon">
				  	<i class="fa fa-users"></i>
				  </div>
				  <div class="tile-status">
				    <span class="name"><%= __('Users and Permissions') %></span>
			      <div class="badge bg-red hidden" id="userCount"></div>
				  </div>
				</div>
			</a>

			<a href="javascript:;" id="uninstall">
				<div class="tile bg-orange">
				  <div class="tile-content icon">
				  	<i class="fa fa-unlink"></i>
				  </div>
				  <div class="tile-status">
				    <span class="name"><%= __('Uninstall') %></span>
				  </div>
				</div>
			</a>


		</div>
	</div>	  

</div>



<script type="text/x-handlebars-template" class="__UNINSTALL__" lang="fr">
	Etes-vous certain, vous devrez re-d√©marrer votre application
</script>

<script type="text/x-handlebars-template" class="__UNINSTALL__" lang="en">
	Are you sure, you are going to need to restart your app.
</script>




<script type="text/javascript">
window.addEventListener('load', function () {

	socket.get('/user/count', function (response) {
		if (response.count) {
			$('#userCount').html(response.count).removeClass('hidden');
		}
	});


	$('#uninstall').on('click', function (e) {
		e.preventDefault();
		var uninstallConfirm = new qsi.confirm();
		uninstallConfirm.setMessage('.__UNINSTALL__');
		uninstallConfirm.setConfirm(function () {
			window.location.href = '/admin/uninstall';
		});
		uninstallConfirm.show();
	})

})
</script>











