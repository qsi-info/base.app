<div class="modal qsi-confirm fade" id="confirm" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title"><%= __('Confirmation') %></h3>
      </div>
      <div class="modal-body">
        <p class="message">Content placeholder of the confirmation message</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default close-button" data-dismiss="modal"><%= __('Cancel') %></button>
        <button type="button" class="btn btn-primary confirm-button"><%= __('Confirm') %></button>
      </div>
    </div>
  </div>
</div>